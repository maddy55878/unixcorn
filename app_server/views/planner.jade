        script.
            // Get the modal
            var modal = document.getElementById('myModal');
            var test12 = document.getElementById("test1");
            // Get the button that opens the modal
            var btn = document.getElementById("myBtn");
            // var radi= document.getElementById("optradio1");
            // var radi2= document.getElementById("opr1");
            // Get the <span> element that closes the modal
            var span = document.getElementsByClassName("close")[0];
           
            // When the user clicks the button, open the modal
            btn.onclick = function() {
            modal.style.display = "block";
              if(document.getElementById("opr1").checked){
                  if(document.getElementById("disopr1").checked){
                    test12.innerHTML = "Looking for cheap activities in a short walk";
                  }else if(document.getElementById("disopr2").checked){
                     test12.innerHTML = "Looking for cheap activities in a short drive";
                  }else{
                     test12.innerHTML = "Looking for cheap activities in a long drive";
                  }
                }else if (document.getElementById("opr2").checked){
                     if(document.getElementById("disopr1").checked){
                         test12.innerHTML = "Looking for resonable priced activities in a short walk";
                      }else if(document.getElementById("disopr2").checked){
                         test12.innerHTML = "Looking for resonable priced activities in a short drive";
                      }else{
                         test12.innerHTML = "Looking for resonable priced activities in a long drive";
                    }
                }else{
                  if(document.getElementById("disopr1").checked){
                         test12.innerHTML = "Looking for expensive activities in a short walk";
                      }else if(document.getElementById("disopr2").checked){
                         test12.innerHTML = "Looking for expensive activities in a short drive";
                      }else{
                         test12.innerHTML = "Looking for expensive activities in a long drive";
                    }
                }
            }
            // When the user clicks on <span> (x), close the modal
            span.onclick = function() {
              modal.style.display = "none";
            }
            // When the user clicks anywhere outside of the modal, close it
            window.onclick = function(event) {
              if (event.target == modal) {
                modal.style.display = "none";
              }
            }
